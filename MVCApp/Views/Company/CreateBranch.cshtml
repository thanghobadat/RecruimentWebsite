@model MVCApp.ViewModels.CompanyBranchCreateRequest

@{
    ViewData["Title"] = "Create Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Create Branch</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home page</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">Account</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Company" asp-route-id="@ViewBag.CompanyId">Company</a></li>
        <li class="breadcrumb-item active">Create Branch</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Company" asp-route-id="@ViewBag.CompanyId">Back</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CreateBranch">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <input type="hidden" name="CompanyId" value="@ViewBag.CompanyId" />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>