@model MVCApp.ViewModels.CompanyAvatarUpdateRequest

@{
    ViewData["Title"] = "Update Company Avatar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Update Company Avatar</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home page</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">Account</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Company" asp-route-id="@ViewBag.CompanyId">Company</a></li>
        <li class="breadcrumb-item active">Update Company Avatar</li>
    </ol>


    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Company" asp-route-id="@ViewBag.CompanyId">Back</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="UpdateCompanyAvatar" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="ThumnailImage" class="control-label"></label>
                            <input asp-for="ThumnailImage" type="file" class="form-control" />
                            <span asp-validation-for="ThumnailImage" class="text-danger"></span>
                        </div>
                        <input type="hidden" name="CompanyId" value="@ViewBag.CompanyId" />
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>